@model List<CategoryListUpdateAddDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count() > 0)
{
    @Html.ActionLink("Kategori Ekle", "CategoryAdd", "Category", new { area = "Admin" }, new { @class = "btn btn-primary" })
    <table class="table table-bordered">

        <thead>

            <tr>

                <th>Category Name</th>
                <th>Category Details</th>
                <th></th>
            </tr>


        </thead>

        <tbody>

            <tr>
                @foreach (var item in Model)
                {
                    <td>@item.CategoryName</td>
                    <td>@item.CategoryDetails</td>
                    <td>@Html.ActionLink("Kategori Güncelle","CategoryUpdate","Category",new { id=item.ID},new {@class="btn btn-primary"})</td>
                }




            </tr>




        </tbody>




    </table>
}

else
{

    @Html.ActionLink("Kategori Ekle", "CategoryAdd", "Category", new { area = "Admin" }, new { @class = "btn btn-primary" })
    <p class="text-center">Kategori Yoktur</p>
}


