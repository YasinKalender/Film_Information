@model CategoryListUpdateAddDto
@{
    ViewData["Title"] = "CategoryAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@using (Html.BeginForm())
{




    @Html.AntiForgeryToken()

<div class="form-group">Kategori İsmi</div>
    <input type="text" asp-for="CategoryName" class="form-control" />
    <span asp-validation-for="CategoryName"></span>

    <div class="form-group">Kategori Açıklama</div>
    <input type="text" asp-for="CategoryDetails" class="form-control" />
    <span asp-validation-for="CategoryDetails"></span>

    <button type="submit" class="btn btn-primary">Kategori Ekle</button>





}

<script src="~/validate-js/validate.js"></script>
<script src="~/validate-js/validate.min.js"></script>
