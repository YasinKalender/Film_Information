@model FilmListAddUpdateDto
@{
    ViewData["Title"] = "FilmUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Film Güncelle</h1>

@using (Html.BeginForm("FilmUpdate", "Film", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="hidden" asp-for="ID" />

    <div class="form-group">

        <label>Film Açıklaması</label>
        <input type="text" asp-for="FilmName" class="form-control" />

    </div>

    <div class="form-group">

        <label>Film Açıklaması</label>
        <input type="text" asp-for="FilmDescription" class="form-control" />

    </div>

    <select asp-for="CategoryID" asp-items="ViewBag.category" class="form-control">
    </select>

    <div class="form-group">

        <label>Resim</label>
        <img src="~/image/@Model.Image" style="width:100px;" />
        <input type="hidden" asp-for="@Model.Image" class="form-control" />



    </div>
    
    <input type="file" asp-for="Image" />

    


    <button type="submit" class="btn btn-primary">Film Ekle</button>




}

