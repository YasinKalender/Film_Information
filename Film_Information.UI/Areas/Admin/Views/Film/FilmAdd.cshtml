@{
    ViewData["Title"] = "FilmAdd";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Film Ekle</h1>

@using (Html.BeginForm("FilmAdd","Film",FormMethod.Post,new { enctype = "multipart/form-data" }))
{

